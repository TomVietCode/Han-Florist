extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/access.pug
include ../../mixins/box-head.pug

block main
  +alert-server()
  if(userRole.permissions.includes("accounts_edit"))
    +box-head("Cập nhật tài khoản quản trị")

    form(
      action=`/${prefixAdmin}/accounts/edit/${data.id}?_method=PATCH`
      method="POST"
      enctype="multipart/form-data"
    )
      div(class="form-group")
        label(for="fullName") Họ tên 
          span(class="required") *
        input(
          type="text"
          class="form-control"
          id="fullName"
          name="fullName"
          value=data.fullName
        )
      div(class="form-group")
        label(for="email") Email 
          span(class="required") *
        input(
          type="email"
          class="form-control"
          id="email"
          name="email"
          value=data.email
        )
      div(class="form-group")
        label(for="password") Mật khẩu
          span(class="required") *
        input(
          type="password"
          class="form-control"
          id="password"
          name="password"
          placeholder="Đổi mật khẩu mới..."
        )
      div(class="form-group")
        label(for="phone") Số điện thoại
        input(
          type="text"
          class="form-control"
          id="phone"
          name="phone"
          value=data.phone
        )
      div(
        class="form-group"
        upload-image
      )
        label(for="avatar") Avatar
        input(
          type="file"
          class="form-control-file"
          id="avatar"
          name="avatar"
          accept="image/*"
          upload-image-input
        )
        img(
          src=data.avatar
          class="image-preview"
          upload-image-preview
        )
      div(class="form-group")
        label(for="role_id") Phân quyền
        select(name="role_id" id="role_id" class="form-control")
          option(disabled) -- Chọn --
          each item in roles
            option(
              value=item.id
              selected=(item.id == data.role_id ? true : false)
            ) #{item.title}
      div(class="form-group form-check form-check-inline")
        input(
          type="radio"
          class="form-check-input"
          id="statusActive"
          name="status"
          value="active"
          checked=(data.status === "active" ? true : false)
        )
        label(for="statusActive" class="form-check-label") Hoạt động
      div(class="form-group form-check form-check-inline")
        input(
          type="radio"
          class="form-check-input"
          id="statusInActive"
          name="status"
          value="inactive"
          checked=(data.status === "inactive" ? true : false)
        )
        label(for="statusInActive" class="form-check-label") Dừng hoạt động
      div(class="form-group")
        button(
          type="submit"
          class="btn button-default"
        ) Cập nhật
  else 
    +accessDenied()