extends  ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
  +box-head("Tổng quan")
  .row.mt-4
    .col-12
      h2 Số liệu phân tích
    .col-6
      .card.mb-4
        .card-header Danh mục sản phẩm
        .card-body
          p Số lượng: <b>#{statistic.category.total}</b>
          p Hoạt động: <b>#{statistic.category.active}</b>
          p Dừng hoạt động: <b>#{statistic.category.inactive}</b>

    .col-6
      .card.mb-4
        .card-header Sản phẩm
        .card-body
          p Số lượng: <b>#{statistic.product.total}</b>
          p Hoạt động: <b>#{statistic.product.active}</b>
          p Dừng hoạt động: <b>#{statistic.product.inactive}</b>

    .col-6
      .card.mb-4
        .card-header Tài khoản admin
        .card-body
          p Số lượng: <b>#{statistic.adminAccount.total}</b>
          p Hoạt động: <b>#{statistic.adminAccount.active}</b>
          p Dừng hoạt động: <b>#{statistic.adminAccount.inactive}</b>

    .col-6
      .card.mb-4
        .card-header Tài khoản client
        .card-body
          p Số lượng: <b>#{statistic.user.total}</b>