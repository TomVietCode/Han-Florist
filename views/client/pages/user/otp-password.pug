extends ../../layouts/default.pug

block main
  .container.my-5
    .row.justify-content-center
      .col-8
        h1(class="text-center") Nhập mã OTP xác thực cho email: #{email}
        form(
          action="/user/otp-password"
          method="POST"
        )
          div(class="form-group d-none")
            label(for="email") Email
            input(
              type="email"
              class="form-control"
              id="email"
              name="email"
              required
              value=email
              readonly
            )
          div(class="form-group")
            label(for="otp") Mã OTP
            input(
              type="text"
              class="form-control"
              id="otp"
              name="otp"
              required
            )
          div(class="form-group mt-2")
            button(
              type="submit"
              class="btn btn-primary btn-block"
            ) Xác nhận