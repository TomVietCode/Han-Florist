extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/product-card.pug

block main 
  .container.my-3
    .row
      .col-12
        +box-head(title)
    if(products.length > 0)
      .row
        each item in products 
          +product-card(item)
    else 
      h2(class="text-center mt-5") Không tìm thấy sản phẩm nào
