extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main 
  h1 Trang chủ
  +box-head("Sản phẩm nổi bật")

  .row
    each item in productsFeature
      .col-2.mb-3
        .product-item
          .inner-image
            a(href=`/products/detail/${item.slug}`)
              img(src=item.thumbnail, alt=item.title style="object-fit: contain;")
          .inner-content
            h3.inner-title
              a(href=`/products/detail/${item.slug}`) #{item.title}
            .inner-price-new #{item.priceNew}$
            .inner-price-old #{item.price}$
            .inner-discount -#{item.discountPercentage}%